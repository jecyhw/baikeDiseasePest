<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <File name="FILE" fileName="logs/log4j2${date:yyyy-MM-dd}.log" append="false">
            <PatternLayout pattern="%t %-5p %c{2} - %m%n"/>
        </File>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="%d %-5p [%t] %C{2} (%F:%L) - %m%n"/>
        </Console>
        <!--<NoSql name="MongoDbAppender">-->
            <!--<MongoDb databaseName="test" collectionName="applog${date:yyyy-MM-dd}" server="localhost" port="27017"/>-->
        <!--</NoSql>-->
    </Appenders>

    <Loggers>
        <!--<Logger name="org.springframework.web" level="searchError" additivity="false">-->
            <!--&lt;!&ndash;<AppenderRef ref="MongoDbAppender"/>&ndash;&gt;-->
        <!--</Logger>-->
        <Root level="INFO">
            <AppenderRef ref="STDOUT"/>
            <AppenderRef ref="FILE"/>
        </Root>
    </Loggers>
</Configuration>
